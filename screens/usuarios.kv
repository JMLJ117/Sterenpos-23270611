<UsuariosScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Barra de navegación
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            spacing: 5

            Button:
                text: 'Productos'
                on_press: root.manager.current = 'productos'
            Button:
                text: 'Usuarios'
                on_press: root.manager.current = 'usuarios'
            Button:
                text: 'Clientes'
                on_press: root.manager.current = 'clientes'
            Button:
                text: 'Proveedores'
                on_press: root.manager.current = 'proveedores'
            Button:
                text: 'Ventas'
                on_press: root.manager.current = 'ventas'

        # Listado de usuarios
        RecycleView:
            id: rv
            viewclass: 'Label'

            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, dp(48)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

        # Botones de acción
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: 10
            padding: 10

            Button:
                text: 'Agregar'
                on_press: root.agregar_usuario()
            Button:
                text: 'Actualizar'
                on_press: root.actualizar_usuario()
            Button:
                text: 'Eliminar'
                on_press: root.eliminar_usuario()
